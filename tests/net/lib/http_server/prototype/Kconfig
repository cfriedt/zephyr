# Config options for http2 server sample application

# Copyright (c) 2023, Emna Rekik
# SPDX-License-Identifier: Apache-2.0

mainmenu "HTTP2 server sample application"

config NET_HTTP2_MAX_CLIENTS
	int "Max number of HTTP/2 clients"
	default 3
	range 1 100
	help
	  This setting determines the maximum number of HTTP/2 clients that the server can handle at once.

config NET_HTTP2_MAX_STREAMS
	int "Max number of HTTP/2 streams"
	default 2
	range 1 10
	help
	  This setting determines the maximum number of HTTP/2 streams for each client.

config NET_HTTP2_CLIENT_BUFFER_SIZE
	int "Client Buffer Size"
	default 256
	range 64 1024
	help
	  This setting determines the buffer size for each client.

config MAX_HTTP_RESPONSE_SIZE
	int "Maximum HTTP Response Size"
	default 128
	range 64 1024
	help
	  This setting determines the maximum size of the HTTP response that the server can handle.

config MAX_HTTP_URL_LENGTH
	int "Maximum HTTP URL Length"
	default 64
	range 32 256
	help
	  This setting determines the maximum length of the HTTP URL that the server can process.

config NET_HTTP2_MAX_FRAME_SIZE
	int "Maximum Frame Size"
	default 2048
	range 1024 4096
	help
	  This setting determines the maximum size of a frame that the server can handle.

config NET_HTTP2_MAX_FRAMES
	int "Maximum Number of Frames"
	default 1000
	range 100 5000
	help
	  This setting determines the maximum number of frames.

source "Kconfig.zephyr"
